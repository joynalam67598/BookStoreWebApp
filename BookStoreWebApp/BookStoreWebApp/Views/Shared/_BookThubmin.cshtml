@model BookModel;
<div class="card h-100 border-info">
    <!-- Product image-->
    <img class="card-img-top" src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/book/cover/noImage.png" : Model.CoverImageUrl  )" alt="..." />
    <!-- Product details-->
    <div class="card-body p-4">
        <div class="text-center">
            <!-- Product name-->
            <h5 class="fw-bolder">@(string.IsNullOrEmpty(Model.Title) ? " Title is not available " : Model.Title)</h5>
            <!-- Product price-->
        @(string.IsNullOrEmpty(Model.Author) ? "Author is note available" : Model.Author)
        </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent ">
        <div class="text-center ">
            <a class="btn btn-outline-info mt-auto"
               asp-route="bookDetailsRoute" asp-route-id="@Model.Id">View</a>
        </div>
    </div>
</div>