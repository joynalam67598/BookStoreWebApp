@using BookStoreWebApp.Model
@using Microsoft.Extensions.Options
@inject IOptions<BookAlertConfig> _configuration


<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            @* <a class="navbar-brand" href="#">@_bookRepository.GetAppName()</a> *@
            <a class="navbar-brand" href="#">@_configuration.Value.AppName</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="AboutUs">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Book" asp-action="GetAllBooks">All Books</a></li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li><a class="dropdown-item" asp-protocol="http" asp-host="BookStoreWebApp" asp-controller="Book" asp-action="GetBook">Popular Items</a></li>
                            <li><a class="dropdown-item" href="#">New Arrivals</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarBookDropdown" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">Book</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarBookDropdown">
                            <li><a class="dropdown-item" asp-controller="Book" asp-action="AddBook">Add Book</a></li>

                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-area="Admin">Admin</a></li>

                </ul>

                <div>
                    <i class="bi-cart-fill me-1 bg-light"></i>
                    Cart
                    <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                </div>
                <div>
                    <partial name="_LoginInfo" />
                </div>


                </div>
            </div>
    </nav>
    @* @if (newBook.GetValue<bool>("DisplayAlert")) //section *@
    @if (_configuration.Value.DisplayAlert)
    {
        <div class="alert alert-info">
            @* @(newBook.GetValue<string>("AlertMessage")) // section*@
            @(_configuration.Value.AlertMessage)
        </div>

    }
    
</header>